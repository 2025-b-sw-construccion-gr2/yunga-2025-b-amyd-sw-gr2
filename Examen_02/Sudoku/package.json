{
  "name": "sudoku-game",
  "version": "1.0.0",
  "description": "Juego interactivo de Sudoku con pipeline de CI/CD",
  "main": "src/index.html",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js tests/**/*.js",
    "lint:fix": "eslint src/**/*.js tests/**/*.js --fix",
    "format": "prettier --check \"src/**/*.{js,html,css}\" \"tests/**/*.js\"",
    "format:fix": "prettier --write \"src/**/*.{js,html,css}\" \"tests/**/*.js\"",
    "build": "node build.js",
    "start": "node server.js",
    "dev": "node server.js"
  },
  "keywords": [
    "sudoku",
    "game",
    "javascript",
    "ci-cd"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/sudoku.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
